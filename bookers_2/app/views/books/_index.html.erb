<body>
 <main>
   <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
   <div class="container px-5 px-sm-0">
    <div class="row">
      <table class='table table-hover table-inverse'>
       <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
       </thead>
        <tbody>
            <% books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user,:profile_image,format: 'jpeg',fallback: "no_image.jpg",size: "100x100" %></td>
                <td><%= link_to book.title,book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
        </tbody>
       </table>
     </div>
    </div>
   </div>
 </main>
</body>