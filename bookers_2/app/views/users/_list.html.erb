 <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
   <h2>User info</h2>
   <p><%= attachment_image_tag user,:profile_image,fallback: "no_image.jpg",size: "100x100" %></p>
  <tbody>
   <table class="table">
    <tr></tr>
    <tr>
     <th>name</th>
     <th><%= user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= user.introduction %></th>
    </tr>
     <tr>
      <th>followes</th>
      <th><%= link_to user.followings.count,  user_followings_path(user) %></th>
     </tr>
     <tr>
      <th>followers</th>
      <th><%= link_to user.followers.count, user_followers_path(user) %></th>
     </tr>
    </table>
        <% unless current_user == user %>
             <% if current_user.following?(user) %>
               <%= link_to "フォローを外す", user_relationships_path(user.id), class: "btn btn-info",method: :delete %>
             <% else %>
               <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success",method: :post %>
             <% end %>
        <% end %>
  </tbody>
   <div class="row">
      <%= link_to'',edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
   </div>
    <h2 class="mt-3">New book</h2>
     <%= form_with model: Book.new, local:true do |f| %>
      <div class="form-group">
            <label for="book_title">Title</label>
              <P><%= f.text_field :title, class: "form-control" %></P>
        </div>
      <div class="form-group">
            <label for="book_opinion">Opinion</label>
              <P><%= f.text_area :body, class: "form-control"%></P>
        </div>
      <div class="form-group">
          <P><%= f.submit 'Create Book',class: "btn btn-success"%></P>
        </div>
     <% end %>